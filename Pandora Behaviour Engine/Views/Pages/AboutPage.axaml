<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:Pandora.ViewModels"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
             mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="600"
             x:Class="Pandora.Views.Pages.AboutPage">
		<StackPanel Spacing="14" Margin="8">
			<StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Left">
				<Viewbox Width="52" Height="52">
					<Image Source="{StaticResource PandoraIcon}" Margin="0 0 0 0"/>
				</Viewbox>
				<StackPanel VerticalAlignment="Center">
					<TextBlock Text="{x:Static vm:AboutPageViewModel.Header}"
										 Theme="{StaticResource TitleTextBlockStyle}" />
					<TextBlock Text="{x:Static vm:AboutPageViewModel.SubHeader}"
										 Theme="{StaticResource BodyTextBlockStyle}"
										 Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
				</StackPanel>
			</StackPanel>

			<TextBlock Text="{x:Static vm:AboutPageViewModel.Content}"
								 TextWrapping="Wrap"
								 HorizontalAlignment="Left"
								 Theme="{StaticResource BodyTextBlockStyle}" />

			<Separator Margin="0,10" />

			<StackPanel Spacing="4">
				<ui:SettingsExpander Header="Check Update"
														 Description="Check for a new version"
														 IsEnabled="False"
														 IconSource="Refresh">
				</ui:SettingsExpander>

				<ui:SettingsExpander Header="GitHub"
														 Description="Visit GitHub page"
														 IsClickEnabled="True"
														 IconSource="{DynamicResource IconGithub}">
					<Interaction.Behaviors>
						<EventTriggerBehavior EventName="Click">
							<LaunchUriOrFileAction Path="https://github.com/Monitor221hz/Pandora-Behaviour-Engine-Plus" />
						</EventTriggerBehavior>
					</Interaction.Behaviors>

					<ui:SettingsExpander.Footer>
						<ui:SymbolIcon Symbol="ChevronRight" />
					</ui:SettingsExpander.Footer>
				</ui:SettingsExpander>

				<ui:SettingsExpander Header="Discord"
														 Description="Join the Discord group"
														 IsClickEnabled="True"
														 IconSource="{DynamicResource IconDiscord}">
					<Interaction.Behaviors>
						<EventTriggerBehavior EventName="Click">
							<LaunchUriOrFileAction Path="https://discord.gg/8nUQCWMn3w" />
						</EventTriggerBehavior>
					</Interaction.Behaviors>

					<ui:SettingsExpander.Footer>
						<ui:SymbolIcon Symbol="ChevronRight" />
					</ui:SettingsExpander.Footer>
				</ui:SettingsExpander>

			</StackPanel>

		</StackPanel>
</UserControl>